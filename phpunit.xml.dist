      <directory>vendor/oro/*/*/*/*/*/Command</directory>
      <directory>vendor/marellocommerce/*/*/*/*/*/Command</directory>
      <directory>vendor/oro/*/Controller</directory>
      <directory>vendor/oro/*/*/Controller</directory>
