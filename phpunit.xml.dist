<?xml version="1.0" encoding="UTF-8"?>
<!-- https://phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd" backupGlobals="false" backupStaticAttributes="false" bootstrap="config/bootstrap_test.php" stopOnError="false" stopOnFailure="false" stopOnWarning="false" stopOnIncomplete="false" stopOnRisky="false" stopOnSkipped="false" failOnRisky="false" failOnWarning="false" beStrictAboutChangesToGlobalState="false" beStrictAboutOutputDuringTests="false" beStrictAboutResourceUsageDuringSmallTests="false" beStrictAboutTestsThatDoNotTestAnything="false" beStrictAboutTodoAnnotatedTests="false" beStrictAboutCoversAnnotation="false" enforceTimeLimit="false" verbose="true">
  <coverage>
    <include>
      <directory>vendor/oro</directory>
      <directory>vendor/marellocommerce</directory>
    </include>
    <exclude>
      <directory>vendor/oro/*/Command</directory>
      <directory>vendor/oro/*/*/Command</directory>
