{% extends 'OroUIBundle:actions:update.html.twig' %}

{% set formAction = entity.id ? path('marelloenterprise_inventory_warehousegroup_update', {id: entity.id}) : path('marelloenterprise_inventory_warehousegroup_create') %}

{% oro_title_set({params : {'%name%': entity.name, '%entityName%': 'marello.inventory.warehousegroup.entity_label'|trans} }) %}

{% block navButtons %}
    {% if entity.id and not entity.system and not marello_inventory_is_fixed_warehousegroup(entity) and resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('marelloenterprise_inventory_api_delete_warehousegroup', {'id': entity.id}),
            'dataRedirect': path('marelloenterprise_inventory_warehousegroup_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-tag',
            'dataId': entity.id,
            'entity_label': 'marello.inventory.warehousegroup.entity_label'|trans
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('marelloenterprise_inventory_warehousegroup_index')) }}
    {% if entity.id and resource_granted('marelloenterprise_inventory_warehousegroup_update') or resource_granted('marelloenterprise_inventory_warehousegroup_create') %}
        {% set html = '' %}
        {% if resource_granted('marelloenterprise_inventory_warehousegroup_view') %}
            {% set html = UI.saveAndCloseButton({
            'route': 'marelloenterprise_inventory_warehousegroup_view',
            'params': {'id': '$id'}
            }) %}
        {% endif %}
        {% set html = html ~ UI.saveAndStayButton({
        'route': 'marelloenterprise_inventory_warehousegroup_update',
        'params': {'id': '$id'}
        }) %}

        {{ UI.dropdownSaveButton({'html': html}) }}
    {% endif %}
{% endblock %}

{% block pageHeader %}
    {% if entity.id %}
        {% set breadcrumbs = {
        'entity':      entity,
        'indexPath':   path('marelloenterprise_inventory_warehousegroup_index'),
        'indexLabel': 'marello.inventory.warehousegroup.entity_plural_label'|trans,
        'entityTitle': entity.name|default('N/A'|trans)
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'marello.inventory.warehousegroup.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'marello-saleschannel-group-update' %}

    {% set dataBlocks = [
    {
    'title': 'marelloenterprise.inventory.warehousegroup.datablock.general'|trans,
    'class': 'active',
    'subblocks': [
        {
            'data': [
                form_row(form.name),
                form_row(form.description),
                form_row(form.warehouses),
            ]
        }
    ]
    }] %}

    {% set data = {
        'formErrors': form_errors(form),
        'dataBlocks': dataBlocks
    }%}

    {{ parent() }}
{% endblock content_data %}
